# BlazorCMS n8n Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# BlazorCMS Configuration (Required)
# ============================================

# BlazorCMS API base URL (where your API is running)
BLAZORCMS_API_URL=http://localhost:7250

# BlazorCMS public website URL (for links in emails/social media)
BLAZORCMS_PUBLIC_URL=http://localhost:5000

# JWT token for API authentication
# Get this by calling: POST /api/auth/login
# NOTE: Tokens expire after 2 hours by default - consider extending in production
BLAZORCMS_JWT_TOKEN=your-jwt-token-here

# Email address to use as sender
BLAZORCMS_FROM_EMAIL=noreply@blazorcms.com

# ============================================
# Admin Configuration (Required)
# ============================================

# Admin email for notifications and alerts
ADMIN_EMAIL=admin@yourdomain.com

# ============================================
# Mailchimp Configuration (Optional)
# Used by: User Registration, Email Subscribers
# ============================================

# Your Mailchimp audience/list ID
# Find this in: Audience → Settings → Audience name and defaults
MAILCHIMP_LIST_ID=

# ============================================
# Google Sheets Configuration (Optional)
# Used by: User Registration, Email Subscribers
# ============================================

# Google Sheets spreadsheet ID (from the URL)
# https://docs.google.com/spreadsheets/d/{SPREADSHEET_ID}/edit
GOOGLE_SHEETS_ID=

# ============================================
# Google Drive Configuration (Optional)
# Used by: Blog Backup workflow
# ============================================

# Google Drive folder ID where backups will be stored
# Get this from the folder URL: https://drive.google.com/drive/folders/{FOLDER_ID}
GOOGLE_DRIVE_BACKUP_FOLDER_ID=

# ============================================
# AWS S3 Configuration (Optional)
# Used by: Blog Backup workflow
# ============================================

# S3 bucket name for storing backups
AWS_S3_BUCKET_NAME=blazorcms-backups

# AWS credentials are set separately in n8n's credential manager

# ============================================
# Azure Blob Storage Configuration (Optional)
# Used by: Blog Backup workflow
# ============================================

# Azure container name for storing backups
AZURE_CONTAINER_NAME=blazorcms-backups

# Azure connection string is set in n8n's credential manager

# ============================================
# Slack Configuration (Optional)
# Used by: Multiple workflows for notifications
# ============================================

# Slack channel ID for admin notifications
# Get this from: Right-click channel → View channel details → Copy channel ID
SLACK_ADMIN_CHANNEL=C01234567

# Slack webhook URL (alternative to OAuth)
SLACK_WEBHOOK_URL=

# ============================================
# n8n Webhook URLs (Auto-generated)
# These are the webhook endpoints in n8n
# ============================================

# Webhook for blog publication events
N8N_WEBHOOK_BLOG_PUBLISHED=http://localhost:5678/webhook/blazorcms-blog-published

# Webhook for user registration events
N8N_WEBHOOK_USER_REGISTERED=http://localhost:5678/webhook/blazorcms-user-registered

# Webhook for subscriber notifications
N8N_WEBHOOK_NOTIFY_SUBSCRIBERS=http://localhost:5678/webhook/blazorcms-notify-subscribers

# ============================================
# Optional: Third-Party Service Configuration
# ============================================

# Twitter API credentials (set in n8n credential manager)
# Required for: Blog Publication to Social Media workflow

# LinkedIn OAuth credentials (set in n8n credential manager)
# Required for: Blog Publication to Social Media workflow

# SendGrid API Key (alternative to SMTP)
SENDGRID_API_KEY=

# Discord webhook URL
DISCORD_WEBHOOK_URL=

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ============================================
# n8n Configuration (Optional)
# These can be set if running n8n via Docker/npm
# ============================================

# n8n basic authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change-this-password

# n8n host configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Webhook base URL (change in production)
WEBHOOK_URL=http://localhost:5678/

# Timezone
GENERIC_TIMEZONE=America/New_York

# Execution mode (regular or queue)
EXECUTIONS_MODE=regular

# ============================================
# Production Settings
# ============================================

# Set to true to enable HTTPS
USE_HTTPS=false

# Production domain (if using HTTPS)
PRODUCTION_DOMAIN=n8n.yourdomain.com

# Encryption key for n8n (generate random string)
N8N_ENCRYPTION_KEY=

# ============================================
# Notes
# ============================================

# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in the required values above
# 3. Never commit .env to version control
# 4. Generate secure passwords for all services
# 5. Rotate credentials regularly in production

# For more information, see: SETUP_GUIDE.md
