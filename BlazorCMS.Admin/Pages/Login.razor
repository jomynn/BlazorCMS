@page "/login"
@using BlazorCMS.Admin.Services
@using BlazorCMS.Shared.DTOs
@inject AdminAuthService AdminAuthService
@inject NavigationManager Navigation

<h3>Admin Login</h3>

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <p style="color:red">@ErrorMessage</p>
}


<div>
    <label>Email:</label>
    <input @bind="LoginModel.Email" placeholder="Email" />
</div>

<div>
    <label>Password:</label>
    <input @bind="LoginModel.Password" type="password" placeholder="Password" />
</div>

<button @onclick="AdminLogin">Login</button>

@code {
    private LoginDTO loginDto = new();
    private string ErrorMessage = "";

    private async Task AdminLogin()
    {
        var result = await AdminAuthService.LoginAsync(loginDto);
        if (result)
        {
            Navigation.NavigateTo("/dashboard");
        }
        else
        {
            ErrorMessage = "Invalid Credentials!";
        }
    }
}
